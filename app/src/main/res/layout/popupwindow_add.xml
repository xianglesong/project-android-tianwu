<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="12dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#191B1C" />

        <RelativeLayout
            android:id="@+id/re_scan"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#22292C">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:src="@drawable/scan_barcode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="63dp"
                android:text="扫一扫"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#191B1C" />

        <RelativeLayout
            android:id="@+id/re_share_to_weixin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#22292C">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:src="@drawable/weixin_share_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="63dp"
                android:text="分享到微信"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#191B1C" />

        <RelativeLayout
            android:id="@+id/re_image_search"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#22292C"
            android:visibility="gone">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:src="@drawable/image_search"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="63dp"
                android:text="实物搜"
                android:textColor="#fff"
                android:textSize="16sp" />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>